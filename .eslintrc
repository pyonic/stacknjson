{
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": "standard",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "root": true,
    "rules": {
      "indent": ["error", 4],
      "semi": [2, "always"],
      "import/no-unresolved": [
        2,
        {
          "commonjs": true,
          "amd": true
        }
      ]
    },
    "plugins": ["import"]
  }